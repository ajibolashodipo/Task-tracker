<%- include ("./partials/header")%>
<div class="all-content">
  <section>
    <div class="edit-form-container">
      <h1>Edit <%=update.name %></h1>

      <form
        action="/users/<%=userID%>/tasks/<%=update._id%>?_method=PUT"
        method="POST"
      >
        <div class="form-row justify-content-between">
          <div class="form-group col-md-6">
            <!-- <label for="inputEmail4">Task Name:</label> -->
            <input
              class="form-control"
              type="text"
              id="task-name"
              placeholder="Enter task"
              name="name"
              value="<%=update.name %>"
              required
            />
          </div>
          <div class="form-group col-md-4">
            <div class="row justify-content-between">
              <div class="col-4">
                <label for="time-to-complete">Due By:</label>
              </div>
              <div class="col-8">
                <input
                  class="form-control"
                  type="time"
                  id="time-to-complete"
                  name="complete"
                  value="<%=update.complete %>"
                  required
                />
              </div>
            </div>
          </div>
        </div>
        <div class="form-group">
          <!-- <label for="exampleFormControlTextarea1">Describe the Task: </label> -->
          <textarea
            class="form-control"
            id="exampleFormControlTextarea1"
            rows="3"
            placeholder="Describe the task (200 characters)"
            maxlength="200"
            name="description"
            required
          >
<%=update.description %></textarea
          >
        </div>

        <button type="submit" id="first-submit" class="btn btn-info">
          Submit
        </button>
      </form>
    </div>
  </section>
</div>

<%- include ("./partials/footer")%>
